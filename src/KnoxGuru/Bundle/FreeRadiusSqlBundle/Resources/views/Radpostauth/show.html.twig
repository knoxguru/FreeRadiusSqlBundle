{% extends 'KnoxGuruFreeRadiusSqlBundle::layout.html.twig' %}

{% block body -%}
    <h1>Radpostauth</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Pass</th>
                <td>{{ entity.pass }}</td>
            </tr>
            <tr>
                <th>Reply</th>
                <td>{{ entity.reply }}</td>
            </tr>
            <tr>
                <th>Authdate</th>
                <td>{{ entity.authdate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('postauth') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('postauth_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
