{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Radgroupcheck</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Groupname</th>
                <td>{{ entity.groupname }}</td>
            </tr>
            <tr>
                <th>Attribute</th>
                <td>{{ entity.attribute }}</td>
            </tr>
            <tr>
                <th>Op</th>
                <td>{{ entity.op }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ entity.value }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('group') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('group_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
